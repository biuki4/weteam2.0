.game-item:nth-last-child(1) {
  margin-bottom: 100rpx;
}
.game-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 10rpx 10rpx 10rpx #ccc;
  margin: 20rpx;
  padding: 30rpx;
}
.game-item .game-title {
    font-size: 48rpx;
}
.game-item .game-title text:nth-child(1) {
      font-size: 48rpx;
      color: #008de1;
}
.game-item .game-image {
    width: 100%;
    height: 250rpx;
    margin-top: 20rpx;
    position: relative;
}
.game-item .game-image image {
      width: 100%;
      height: 100%;
}
.game-item .game-image .cover {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      position: absolute;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      font-size: 50rpx;
      color: #fff;
      letter-spacing: 15px;
}
.game-item .introduce {
    font-size: 28rpx;
    color: #595959;
    margin-top: 10rpx;
}
.game-item .introduce text:nth-child(1) {
      color: #008de1;
      margin-right: 15rpx;
}
.game-item .game-item-tags {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    margin: 15rpx 10rpx 15rpx 0;
}
.game-item .info {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    font-size: 24rpx;
    color: #717171;
}

