.team {
  background-color: #fff;
  padding: 20rpx;
  position: relative;
  margin-top: 20rpx;
}
.team .full-icon {
    position: absolute;
    right: 10rpx;
    top: 10rpx;
    width: 120rpx;
    height: 120rpx;
}
.team .full-icon ._img {
      width: 100%;
      height: 100%;
}
.team .team-head .head-left .left-item {
    margin-top: 10rpx;
    color: #616161;
}
.team .team-head .head-left .left-item .left-item-tit {
      color: #55aaff;
      font-size: 30rpx;
}
.team .team-head .head-left .left-item .team-icon {
      color: #fa436a;
      font-size: 48rpx;
      font-weight: 500;
}
.team .team-head .head-left .left-item .team-name {
      font-size: 40rpx;
      padding-left: 20rpx;
      color: #000000;
}
.team .team-head .head-left .team-brief {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
}
.team .team-head .head-left .team-brief .brief {
      margin-top: 10rpx;
}
.team .team-info {
    margin-top: 20rpx;
}
.team .team-info .team-info-brief {
      padding: 15rpx;
      border: 1rpx solid #ccc;
      border-radius: 10rpx;
      min-height: 80rpx;
}
.team .team-info .team-info-brief text {
        color: #909090;
}
.bot {
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  height: 70rpx;
  font-size: 24rpx;
  color: #707070;
  position: relative;
  padding: 0 20rpx;
}
.bot .detail {
    color: #008de1;
}
.bot .more-icon {
    font-size: 32rpx;
}

